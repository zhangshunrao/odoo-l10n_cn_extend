<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="res_country_cn_extend_inherit_form_view" model="ir.ui.view">
            <field name="name">res.country.cn.inherit.form</field>
            <field name="model">res.country</field>
            <field name="inherit_id" ref="base.view_country_form"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='address_format']" position="replace">
                </xpath>
                <xpath expr="//field[@name='address_format']" position="replace">
                </xpath>
                <xpath expr="//field[@name='code']" position="replace">
                </xpath>
                <xpath expr="//form[@string='Country']/group[1]/group[1]" position="inside">
                    <field name="code"/>
                </xpath>
                <xpath expr="//form[@string='Country']/group[1]/group[2]" position="inside">
                    <label for="address_format"/>
                    <field name="address_format" groups="base.group_no_one" placeholder="Address format..."/>
                </xpath>
                <xpath expr="//form[@string='Country']" position="inside">
                    <label for="state_ids"/>
                    <field name="state_ids"/>
                </xpath>
            </field>
        </record>


        <!--
            City
        -->
        <record id="view_country_city_cn_tree" model="ir.ui.view">
            <field name="name">res.country.city.cn.tree</field>
            <field name="model">res.country.city</field>
            <field name="arch" type="xml">
                <tree string="City">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="state_id"/>
                </tree>
            </field>
        </record>

        <record id="view_country_city_cn_form" model="ir.ui.view">
            <field name="name">res.country.city.cn.form</field>
            <field name="model">res.country.city</field>
            <field name="arch" type="xml">
                <form string="City">
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="state_id" options='{"no_open": True}'/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_country_city_cn" model="ir.actions.act_window">
            <field name="name">City Action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.country.city</field>
            <field name="view_type">form</field>
            <!--<field name="view_id" ref="view_country_city_cn_tree"/>-->
        </record>

        <menuitem action="action_country_city_cn" id="menu_country_city_cn_partner" parent="base.menu_localisation" sequence="2" groups="base.group_no_one"/>


        <!--
            Region
        -->
        <record id="res_country_region_cn_tree" model="ir.ui.view">
            <field name="name">res.country.city.cn.tree</field>
            <field name="model">res.country.region</field>
            <field name="arch" type="xml">
                <tree string="Region">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="city_id"/>
                </tree>
            </field>
        </record>

        <record id="res_country_region_cn_form" model="ir.ui.view">
            <field name="name">res.country.region.cn.form</field>
            <field name="model">res.country.region</field>
            <field name="arch" type="xml">
                <form string="City">
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="city_id" options='{"no_open": True}'/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_country_region_cn" model="ir.actions.act_window">
            <field name="name">Region Action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.country.region</field>
            <field name="view_type">form</field>
            <!--<field name="view_id" ref="view_country_state_tree"/>-->
        </record>

        <menuitem action="action_country_region_cn" id="menu_country_region_cn_partner" parent="base.menu_localisation" sequence="3" groups="base.group_no_one"/>

    </data>
</openerp>

